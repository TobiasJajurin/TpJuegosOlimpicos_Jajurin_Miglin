<div style="height: 8rem;"></div>
<form class="row g-3" action='@Url.Action("GuardarDeportista")' method="post">
  <div class="col-md-4">
    <label for="validationDefault01" class="form-label">Apellido</label>
    <input type="text" class="form-control" name="Apellido" id="validationDefault01" value="Mark" required>
  </div>
  <div class="col-md-4">
    <label for="validationDefault02" class="form-label">Nombre</label>
    <input type="text" class="form-control" name="Nombre" id="validationDefault02" value="Otto" required>
  </div>
  <div class="col-md-4">
    <label for="validationDefaultUsername" class="form-label">Fecha de nacimiento</label>
    <div class="input-group">
      <input type="Date" class="form-control" name="FechaNacimiento" id="validationDefaultUsername" aria-describedby="inputGroupPrepend2" required>
    </div>
  </div>
  <div class="col-md-6">
    <label for="validationDefault03" class="form-label">Foto</label>
    <input type="text" class="form-control" name="Foto" id="validationDefault03" required>
  </div>
  <div class="col-md-3">
    <label for="validationDefault04" class="form-label">Pais</label>
    <select class="form-select" id="validationDefault04" name="IdPais" required>
      <option selected disabled value="">Choose...</option>
      @foreach(Pais p in ViewBag.ListadoPaises){
        <option value="@p.IdPais">@p.Nombre</option>
      }
    </select>
  </div>
<div class="col-md-3">
    <label for="validationDefault04" class="form-label">Deporte</label>
    <select class="form-select" id="validationDefault04" name="IdDeporte" required>
      <option selected disabled value="">Choose...</option>
    @foreach(Deporte p in ViewBag.ListadoDeportes){
        <option value="@p.idDeporte">@p.Nombre</option>
      }
    </select>
  </div>
  <div class="col-12">
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" id="invalidCheck2" required>
      <label class="form-check-label" for="invalidCheck2">
        Agree to terms and conditions
      </label>
    </div>
  </div>
  <div class="col-12">
    <button class="btn btn-primary" type="submit">Submit form</button>
  </div>
</form>